<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Auth.Register">
    
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
            <Entry Placeholder="User New Email"  x:Name="UserNewEmail"></Entry>
            <Entry Placeholder="User New Password"  x:Name="UserNewPassword"></Entry>
            <Button BackgroundColor="Black" TextColor="White" Text="Signup" Clicked="signupbutton_Clicked" x:Name="signupbutton"/>
            <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" BackgroundColor="Black"/>
            <Button BackgroundColor="Orange" Clicked="Back_Clicked" TextColor="White" Text="Retour" x:Name="backbutton"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
